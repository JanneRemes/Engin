#version 120

attribute vec2 inPosition;
attribute vec2 inTexCoords;

varying vec2 TexCoords;
varying vec4 ParticleColor;

uniform mat4 projection;
uniform vec2 offset;
uniform vec4 color;

void main()
{
    float scale = 10.0f;
    TexCoords = inTexCoords;
    ParticleColor = color;
    gl_Position = projection * vec4((inPosition * scale) + offset, 0.0, 1.0);
}